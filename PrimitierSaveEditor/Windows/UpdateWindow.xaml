<Window x:Class="PrimitierSaveEditor.UpdateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PrimitierSaveEditor"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        mc:Ignorable="d"
        Title="UpdateWindow" Height="400" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Label Content="New version is available" Grid.Row="0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <TextBox Grid.Row="1" Margin="5,5,5,5" IsReadOnly="True" x:Name="updateText"/>
        <Button Grid.Row="2" Width="50" Content="Update" Margin="-60,0,0,5" Click="UpdateClick"/>
        <Button Grid.Row="2" Width="50" Content="No" Margin="60,0,0,5" Click="Nyet"/>
    </Grid>
</Window>
